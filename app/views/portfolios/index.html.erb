<h1>Portfolio Index</h1>

<%= link_to("New Portfolio", new_portfolio_path) %><br>

<% if @portfolios %>
	<% @portfolios.each do |portfolio| %>
	<ul>
		<li><%= link_to(portfolio.portfolio_name, portfolio_path(portfolio)) %>
      <button class="delete-portfolio" id=<%= portfolio.id%>> Delete Portfolio</button>
		</li>
	</ul>
	<% end %>
<% end %>
